<h1>Edit Friend Group</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-12">
      <h4>Add a friend_group</h4>
      <%= simple_form_for [ @friend_group ] do |f| %>
        <%= f.input :price %>
        <%= f.input :description %>
        <%= f.input :title %>
        <%= f.input :address %>
        <%= f.submit "Edit", class: "btn btn-warning a" %>
      <% end %>
    </div>
  </div>
</div>

<%= link_to 'Show', @friend_group, btn btn-warning %> |
<%= link_to 'Back', friend_groups_path %>
