<div class="container mt-15">
  <h1>Friend Groups</h1>
</div>




<div class="cards mb-5">
    <% @friend_groups.each do |group| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1478479405421-ce83c92fb3ba?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=334&q=80)">
        <h2><%= group.title %></li></h2>
        <div class="card-tags">
          <%= link_to 'Show', group %>
          <%= link_to 'Edit', edit_friend_group_path(group) %></p>
          <%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %>
          <h2 class="card-trip-pricing"><%= group.price %></h2>
        </div>
      </div>
    <% end %>
</div>


<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
