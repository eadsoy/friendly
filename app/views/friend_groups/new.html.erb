<div class="container">
  <div class="row justify-content-center">
    <div class="col-4">
      <h4>Add a friend_group</h4>
      <%= simple_form_for [ @friend_group ] do |f| %>
        <%= f.input :price %>
        <%= f.input :description %>
        <%= f.input :title %>
        <%= f.input :address %>
        <%= f.submit "Add!", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
<%= link_to 'Back', friend_groups_path, class: "card-back-link btn btn-danger" %> |
