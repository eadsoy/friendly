<%= render 'shared/navbar' %>


<div class="new-border">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-8">
        <h1>Add a Friend Group</h4>
        <%= simple_form_for [ @friend_group ] do |f| %>
          <p>Price:</p><%= f.input :price,
                      label: false %>
          <p>Description:</p><%= f.input :description,
                      label: false %>
          <p>Group Name:</p><%= f.input :title,
                      label: false %>
          <p>Address:</p><%= f.input :address,
                      label: false %>
          <p>Photo:</p><%= f.input :photo, 
                      as: :file,
                      label: false %>
      </div>
    </div>
      <div class="btn-place">
        <li class= " btn btn-warning ml-2">
          <%= link_to 'Back', friend_groups_path, class: "a" %>
        </li>
              <%= f.submit "Add!", class: "btn btn-warning" %>
            <% end %>
      </div>
  </div>
</div>